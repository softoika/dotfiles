# yabai
shift + ctrl + cmd - n : yabai -m display --focus next || yabai -m display --focus prev
shift + ctrl + cmd - p : yabai -m display --focus prev || yabai -m display --focus next
shift + ctrl - n : yabai -m window --focus prev || yabai -m window --focus last
shift + ctrl - p : yabai -m window --focus next || yabai -m window --focus first
shift + ctrl - b : yabai -m space --layout bsp
# warp workaround
alt - space : macism 'com.apple.keylayout.ABC' && ~/Repositories/skhd/bin/skhd -k 'shift + alt - space' && macism 'com.apple.inputmethod.Kotoeri.RomajiTyping.Roman'
ctrl - space : ~/Repositories/skhd/bin/skhd -k '0x39'
